@{
    ViewData["Title"] = "Blogs";
    Layout = "_AdminPanelLayout";
}
@model BLL.ViewModels.AdminModels.BlogPostsVM
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Blog posts</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm hidden-xs" style="width: 150px;">
                        <input type="text" name="authorName" class="form-control pull-right" placeholder="Enter author name">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                        <select id="sport-selector" class="input-group" asp-for="Sport" asp-items="Model.Sports">

                        </select>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>Author</th>
                            <th>Date</th>
                            <th>Sport</th>
                            <th>Header</th>
                        </tr>
                        @foreach (var v in Model.BlogsTableItems)
                        {
                            <tr>
                                <td>@v.Author</td>
                                <td>@v.Published.ToString("dd-MM-yyyy")</td>
                                <td>@v.Sport</td>
                                <td>@v.Header</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>